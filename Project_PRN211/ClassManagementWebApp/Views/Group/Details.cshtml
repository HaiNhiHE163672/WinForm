@model ClassManagementWebApp.DataAccess.Group
@using ClassManagementWebApp.DataAccess


@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    IGroupRepository groupRepository = null;
    groupRepository = new GroupRepository();
}

<h1>Details</h1>

<div>
    <h4>Group</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Group ID
        </dt>
        <dd class = "col-sm-10">
            @Model.GroupId
        </dd>
        <dt class = "col-sm-2">
            Group Name
        </dt>
        <dd class = "col-sm-10">
           @Model.GroupName
        </dd>
        <dt class = "col-sm-2">
            Subject
        </dt>
        <dd class = "col-sm-10">
            @Model.Subject.SubjectName
        </dd>
        <dt class = "col-sm-2">
            Lecturer
        </dt>
        <dd class = "col-sm-10">
            @Model.Lecturer.LecturerName
        </dd>
        <dt class = "col-sm-2">
            Status
        </dt>
        <dd class = "col-sm-10">
            @Model.Status
        </dd>
    </dl>
</div>

<h4>List Student in Class</h4>
<table>
    <h>
        <th>
            Student ID     
        </th>
        
        <th>
            Student Name     
        </th>

        <th>
            Student Email     
        </th>

        <th>
            Student Address      
        </th>
    </thead>
    <tbody>
        @foreach (var s in groupRepository.GetStudentGroupList(Model.GroupId))
        {
            <td>
                @s.Students.FirstOrDefault(s => s.Groups.FirstOrDefault(g => g.GroupId == g.GroupId).GroupId == Model.GroupId).StudentId

    </td>

        <td>
                @s.Students.FirstOrDefault(s => s.Groups.FirstOrDefault(g => g.GroupId == g.GroupId).GroupId == Model.GroupId).StudentName
        </td>
        <td>
                @s.Students.FirstOrDefault(s => s.Groups.FirstOrDefault(g => g.GroupId == g.GroupId).GroupId == Model.GroupId).Email
        </td>
            <td>
                @s.Students.FirstOrDefault(s => s.Groups.FirstOrDefault(g => g.GroupId == g.GroupId).GroupId == Model.GroupId).Address
    </td>
        }
        
    </tbody>
</table>
<div>
    @Html.ActionLink("Edit", "Edit", new { id=Model.GroupId }) |
    <a asp-action="List">Back to List</a>
</div>
